<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    tools:context=".Content.Content_HospitalRemove">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#673AB7"
                android:text="내원일 삭제"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/content_hospital_remove_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\n2021년 12월 05일 15:00"
                android:textAlignment="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/content_hospital_remove_info3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\n삭제하시겠습니까?"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            </LinearLayout>


            <TextView
                android:id="@+id/content_hospital_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Space
                    android:layout_width="25dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/content_hospital_removeOK"
                    android:layout_width="100dp"
                    android:layout_height="40sp"
                    android:background="#E0CFFF"
                    android:text="예" />

                <Space
                    android:layout_width="50dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/content_hospital_removeNo"
                    android:layout_width="100dp"
                    android:layout_height="40sp"
                    android:layout_weight="1"
                    android:background="#E0CFFF"
                    android:text="아니오" />

                <Space
                    android:layout_width="25dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>