<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_sv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/frameLayout_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="401dp"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/content_todaydate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_column="2"
                            android:layout_margin="10dp"
                            android:textAlignment="center"
                            android:textSize="20sp" />

                    </LinearLayout>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="2"
                            android:layout_margin="10dp"
                            android:gravity="center"
                            android:text="출산예정일까지"
                            android:textAlignment="center"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/content_remainingDays"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="2"
                            android:layout_margin="10dp"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textColor="#7E4FD3"
                            android:textSize="34sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textView32"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_column="2"
                            android:layout_margin="10dp"
                            android:text="일 남았습니다."
                            android:textAlignment="center"
                            android:textSize="20sp" />
                    </LinearLayout>

                </TableRow>
            </TableLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="130dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="주차별 건강정보"
                        android:textSize="24sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="264dp">

                    <ImageView
                        android:id="@+id/content_weekPhoto"
                        android:layout_width="150dp"
                        android:layout_height="237dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/tempimg" />

                    <LinearLayout
                        android:layout_width="216dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="34dp" />

                        <TextView
                            android:id="@+id/content_showWeek"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textColor="#673AB7"
                            android:textSize="28sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/content_weekSize"
                            android:layout_width="230dp"
                            android:layout_height="110dp"
                            android:gravity="center"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/content_weekBody"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:textAlignment="center"
                            android:textSize="20sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="38dp"
                            android:orientation="horizontal">

                            <Space
                                android:layout_width="80dp"
                                android:layout_height="44dp" />

                            <Button
                                android:id="@+id/content_moreBtn"
                                android:layout_width="70dp"
                                android:layout_height="35dp"
                                android:background="#E1D5F4"
                                android:gravity="center"
                                android:text="더보기"
                                tools:ignore="TouchTargetSizeCheck" />
                        </LinearLayout>

                    </LinearLayout>

                </TableRow>

            </TableLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="440dp"
                android:stretchColumns="*">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_span="2"
                        android:text="도움이 되는 콘텐츠"
                        android:textSize="24sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <Button
                        android:id="@+id/content_youtubeBtn"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_margin="10dp"
                        android:foregroundGravity="center"
                        android:gravity="center"
                        android:text="마음챙김 태교영상" />

                    <Button
                        android:id="@+id/content_hospitalBtn"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_margin="10dp"
                        android:text="내원일\nD-8" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="127dp"
                    android:gravity="center">

                    <Button
                        android:id="@+id/content_highBtn"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_margin="10dp"
                        android:foregroundGravity="center"
                        android:gravity="center"
                        android:text="고위험 임신군 \n위험도 측정" />

                    <Button
                        android:id="@+id/content_depressionBtn"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_margin="10dp"
                        android:text="지금 우울하신가요?" />

                </TableRow>
            </TableLayout>

        </FrameLayout>


    </RelativeLayout>

</ScrollView>