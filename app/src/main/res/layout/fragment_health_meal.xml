<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".Health_meal">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:text="🍽 식사 기록"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/breakfast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="20dp"
            android:textColor="#000000"
            android:text="아침 메뉴" />

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp">

            <EditText
                android:id="@+id/input_breakfast"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:ems="10"
                android:hint="아침 메뉴를 입력하세요"
                android:inputType="textPersonName"
                android:privateImeOptions="defaultInputmode=korean"
                android:textSize="18sp" />

            <Button
                android:id="@+id/breakfastOK"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="저장" />

            <Button
                android:id="@+id/breakfastDelete"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="삭제" />

        </TableRow>


        <TextView
            android:id="@+id/launch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="20dp"
            android:textColor="#000000"
            android:text="점심 메뉴" />

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp">

            <EditText
                android:id="@+id/input_launch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="점심 메뉴를 입력하세요"
                android:inputType="textPersonName"
                android:privateImeOptions="defaultInputmode=korean" />

            <Button
                android:id="@+id/launchOK"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="저장" />

            <Button
                android:id="@+id/launchDelete"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="삭제" />

        </TableRow>


        <TextView
            android:id="@+id/dinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="20dp"
            android:textColor="#000000"
            android:text="저녁 메뉴" />

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp">

            <EditText
                android:id="@+id/input_dinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="저녁 메뉴를 입력하세요"
                android:inputType="textPersonName"
                android:privateImeOptions="defaultInputmode=korean" />

            <Button
                android:id="@+id/dinnerOK"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="저장" />

            <Button
                android:id="@+id/dinnerDelete"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="삭제" />
        </TableRow>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">


            <Button
                android:id="@+id/BtnMealOK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="확인" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>