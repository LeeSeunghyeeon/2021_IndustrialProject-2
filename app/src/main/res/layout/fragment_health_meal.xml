<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/meal1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="아침 메뉴" />

        <EditText
            android:id="@+id/input_meal1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="시리얼" />

        <TextView
            android:id="@+id/meal2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="점심 메뉴" />

        <EditText
            android:id="@+id/input_meal2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="돈까스" />

        <TextView
            android:id="@+id/meal3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="저녁 메뉴" />

        <EditText
            android:id="@+id/input_meal3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="제육볶음" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <Button
                android:id="@+id/BtnMealCancel"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:text="취소" />

            <Button
                android:id="@+id/BtnMealOK"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:text="확인" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>