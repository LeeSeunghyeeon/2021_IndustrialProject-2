<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".Health_exercise">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/content_showWeek"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="💪 운동 기록"
            android:background="#F7ECD6"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/textView_exercise"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:text="운동 종목"
                android:textColor="#000000"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/spinner_exercise"
                android:layout_width="140dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:spinnerMode="dropdown" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/exercise_input_minute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="5"
                android:hint="30"
                android:textSize="18sp"
                android:inputType="numberSigned" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="분"
                android:textSize="18sp"
                android:textColor="#000000" />
        </TableRow>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/Btn_exerciseOK"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:backgroundTint="#ECCCDD"
                android:text="저장"
                android:textStyle="bold"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="입력한 운동 기록을 저장합니다."
                android:textSize="12sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#F7ECD6"
                android:text="오늘의 운동"
                android:textSize="18sp"
                android:textAlignment="center"
                android:textColor="#000000" />

            <CheckBox
                android:id="@+id/exercise_check1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="요가 | 20분"
                android:textSize="15sp" />

            <CheckBox
                android:id="@+id/exercise_check2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="자전거 | 10분"
                android:textSize="15sp" />


            <Button
                android:id="@+id/Btn_exerciseDelete"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:backgroundTint="#ECCCDD"
                android:text="삭제"
                android:textStyle="bold"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="삭제 버튼을 클릭 시 체크한 해당 운동 기록이 삭제됩니다."
                android:textSize="12sp"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>